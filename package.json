{
  "name": "vue-template",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vue-tsc && vite build",
    "dev": "vite",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.vue .",
    "preview": "vite preview"
  },
  "dependencies": {
    "vue": "^3.3.2",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.6",
    "@types/node": "^18.16.12",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "unplugin-auto-import": "^0.16.0",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.7",
    "vue-tsc": "^1.6.5"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.jsx": "eslint --fix",
    "*.ts": "eslint --fix",
    "*.tsx": "eslint --fix",
    "*.vue": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@antfu",
    "rules": {
      "vue/component-tags-order": [
        "error",
        {
          "order": [
            "template",
            "script",
            "style"
          ]
        }
      ]
    }
  }
}
